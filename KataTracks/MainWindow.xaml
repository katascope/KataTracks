<Window x:Class="KataTracks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KataTracks"
        mc:Ignorable="d"
        Title="KataTracks - The Game Has Changed" Height="864" Width="1536" WindowStyle="None" Background="Black" Foreground="#FF01457E" ResizeMode="NoResize" WindowStartupLocation="Manual" WindowState="Maximized" HorizontalAlignment="Left" VerticalAlignment="Top">
    <Canvas MouseDown="OnMouseDown" MouseUp="OnMouseUp" MouseMove="OnMouseMove" HorizontalAlignment="Left" Height="864" VerticalAlignment="Top" Width="1536" x:Name="MainCanvas">
        <Image x:Name="image" HorizontalAlignment="Left" Height="512" Margin="0,59,0,0" VerticalAlignment="Top" Width="1300" Source="/TronGameCroppedCyan.png" Stretch="Uniform"/>
        <Rectangle x:Name="TrackIndex" Height="510" Margin="0,0,0,0" Stroke="White" Width="1" Canvas.Left="0" Canvas.Top="60"/>
        <Rectangle x:Name="TrackIndexPlay" Height="510" Margin="0,0,0,0" Stroke="White" Width="1" Canvas.Left="0" Canvas.Top="60"/>
        <Label x:Name="VolumeSliderLabel" Content="Vol" Canvas.Left="492" Background="Black" Foreground="#FF2151B8" FontSize="24" Canvas.Top="8"/>
        <Button Click="Exit" Content="Exit" Canvas.Left="1492" Canvas.Top="824" Width="22" Height="18" Background="#FF012461" Foreground="White" RenderTransformOrigin="0.029,-2.831" BorderBrush="#FF120351"/>
        <Button Click="PlayButton_Click" Content="Play" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="38" Background="#FF012461" Foreground="White" BorderBrush="#FF120351"/>
        <Button Click="StopButton_Click" HorizontalAlignment="Left"  Content="Stop" Margin="0,0,0,0" Height="39" Width="54" Background="#FF012461" Foreground="White" Canvas.Left="1472" BorderBrush="#FF120351" Canvas.Top="10"/>
        <Label x:Name="TrackTime" Content="0:0:0" Margin="105,1,0,0" Foreground="#FF2151B8" Width="134" FontSize="28" Canvas.Top="5"/>
        <Slider x:Name="VolumeSlider" ValueChanged="VolumeSlider_ValueChanged" Width="220" Maximum="1" Canvas.Left="540" Canvas.Top="21"/>
        <Label x:Name="TrackTimeOffset" Content="0:0:0" Foreground="#FF2151B8" Width="134" FontSize="28" Canvas.Top="6" Canvas.Left="295"/>
        <TextBox Canvas.Top="576" Text="Lead " TextWrapping="Wrap" Width="239" Height="288" Background="Black" Foreground="#FF59ABF0"/>
        <TextBox Canvas.Top="576" Text="Follow" TextWrapping="Wrap" Width="239" Height="288" Background="Black" Foreground="#FF59ABF0" Canvas.Left="244"/>
        <Label x:Name="BluetoothStatus" Content="Status" Foreground="#FF2151B8" Width="699" FontSize="28" Canvas.Top="5" Canvas.Left="768"/>
    </Canvas>
</Window>
