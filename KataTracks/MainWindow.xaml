        <Button Click="SendBothCRLF" Tag="!worddddddddddddd" Content="Hot Fire Pulse" Canvas.Left="1175" Canvas.Top="626" Background="#FF012461" Foreground="White" BorderBrush="Black"/>
        <Button Click="SendBothCRLF" Tag="!dordrddddddddddd" Content="Fire Pulse" Canvas.Left="1175" Canvas.Top="661" Background="#FF012461" Foreground="White" BorderBrush="Black"/>
        <Button Click="SendBothCRLF" Tag="!lwhlrdddlwhlbddd" Content="Patriotic USA" Canvas.Left="1175" Canvas.Top="691" Background="#FF012461" Foreground="White" BorderBrush="Black"/>
        <Button Click="SendBothCRLF" Tag="!ddddrdddddddbddd" Content="TronFight" Canvas.Left="1175" Canvas.Top="721" Background="#FF012461" Foreground="White" BorderBrush="Black"/>
    </Canvas>
</Window>
