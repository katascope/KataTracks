        <TextBox x:Name="BleScannerView" HorizontalScrollBarVisibility="Visible"
            VerticalScrollBarVisibility="Visible"
            Canvas.Top="54" Text="" TextWrapping="Wrap" Width="298" Height="59" Background="Black" Foreground="#FF59ABF0" Canvas.Left="1003"/>
